@model DavesGamesMVC.DatabaseAccess.ChainLetter.UserModel

<div class="container">

    <div id="banner">Virtual Chain Letter</div>

    @{
        string Payee()
        {
            if (Model.u5Name.Contains("$")) return Model.u5Name;
            else if (Model.u4Name.Contains("$")) return Model.u4Name;
            else if (Model.u3Name.Contains("$")) return Model.u3Name;
            else if (Model.u2Name.Contains("$")) return Model.u2Name;
            else return Model.u1Name;
        }
    }

    <div class="user">@Model.u5Name</div>
    <div class="user">@Model.u4Name</div>
    <div class="user">@Model.u3Name</div>
    <div class="user">@Model.u2Name</div>
    <div class="user">@Model.u1Name</div>
    <div class="user focused">@Model.UserName</div>

    <input type="text" id="UserNameInput" value="" />

    <br />

    <button onclick="addUser('@Model.UserName');">ADD</button>

    <p style="border:2px dashed blue; color:blue;">
        This is a virtual chain letter designed for
        users of the Cash App.
    </p>

    <p>
        First, add your $cashtag to the list above
        and we will create a list for you.
    </p>

    <p>
        Your list will be the one with your $cashtag
        in the blue box.
    </p>

    <p>
        Share your list with as many Cash App users as
        you can.  There are over 30 million of them.
    </p>

    <p>
        Over time, your $cashtag could be seen by thousands,
        maybe even millions of Cash App users.
    </p>

    <p style="border: 2px dashed blue; color: blue;">
        What if some of them sent you a small cash gift?
    </p>

    <p style="border: 2px dashed blue; color: blue;">
        What if you sent a small cash gift to the 
        users on your list?
    </p>

</div>